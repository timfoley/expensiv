%table
  %tr
    %th Date
    %th Name
    %th Purchased By
    %th Amount
    %th Share
    %th Notes

  - @expenses.each do |expense|
    %tr
      %td= expense.date
      %td= link_to expense.name, expense_path(expense)
      %td= link_to expense.user.name, user_path(expense.user)
      %td= '%.02f' % expense.amount
      %td= '%.02f' % expense.share
      %td= expense.notes
