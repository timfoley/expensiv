!!!
%html
  %head
    = csrf_meta_tags
    %title Expensiv
    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload'
    = javascript_include_tag 'application', 'data-turbolinks-track': 'reload'
    -# %link{href: "https://fonts.googleapis.com/css?family=Eczar:400,700|Gentium+Basic:400,400i,700", rel: "stylesheet"}

  %body
    %h1 Expensiv!
    - if current_user
      %p= "Welcome #{current_user.name}"
    .flash
      %p.notice= notice
      %p.alert= alert
    %header
      = link_to 'Sign Up', new_user_registration_path if !current_user
      = link_to 'Sign In', new_user_session_path if !current_user
      = link_to 'Sign Out', destroy_user_session_path, method: :delete if current_user

    = yield
